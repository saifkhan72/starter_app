
@{
    ViewData["Title"] = "Users";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!------------------------------->
<!----------Breadcrumb----------->
<!------------------------------->
<ol class="breadcrumb fs-sm mb-2">
    <li class="breadcrumb-item"><a href="#">User Management</a></li>
    <li class="breadcrumb-item active" aria-current="page">@ViewData["Title"]</li>
</ol>
<!------------------------------->
<!----------Breadcrumb----------->
<!------------------------------->

<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h5 class="card-title mb-0">Users</h5>
        <a href="" class="btn btn-primary" style="width:200px">
            <i class="ri-add-line"></i> Add New User
        </a>
    </div><!-- card-header -->

    <div class="card-body p-3">
        <!-- Table -->
        <table class="table table-striped table-hover table-bordered table-sm text-center align-middle" id="users">
            <thead class="text-center align-middle">
                <tr>
                    <th>Currency</th>
                    <th>Cash (Sell)</th>
                    <th>Cash (Buy)</th>
                    <th>Transfer (Sell)</th>
                </tr>
            </thead>
            <tbody>
                <!-- Dynamically populated via DataTable -->
            </tbody>
        </table>
    </div><!-- card-body -->
</div><!-- card -->


@section css{
    <link href="~/lib/datatables/datatables.min.css" rel="stylesheet">
}
@section Scripts{
    <script src="~/lib/datatables/datatables.min.js"></script>
    <script>
        $(document).ready(function () {
            loadDataTable();
        });

        function loadDataTable() {
            dataTable = $('#users').DataTable({
                "ajax": {
                    "url": "User/Users", // The endpoint
                    "dataSrc": "" // Set to an empty string to use the root array
                },
                "columns": [
                    { "data": "name" },         // Maps to "name" in the JSON
                    { "data": "id" },           // Maps to "id" in the JSON
                    { "data": "userName" },     // Maps to "userName" in the JSON
                    { "data": "email" }         // Maps to "email" in the JSON
                ]
            });
        }


    </script>
}

